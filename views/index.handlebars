<div class="jumbotron">
  <div class="container text-center">

    <h1>BURGER ME!</h1>
    <img src="../assets/img/burgerimg.png">
    <h3>Make a Burger, Eat a Burger</h3>

  </div>
</div>
<div class="container">
  <!--To Devour-->
  <div class="row text-center">
    <div class="col-xs-6">
      <h2>Burgers to Devour</h2>
      <!--HB-->
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=true }}
        {{/unless}}
        {{/each}}
      </ul>

    </div>


    <!--Already Devoured-->
    <div class="col-xs-6">
      <h2>Burgers eaten!</h2>
      <!--HB-->
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        <p> {{ burger_name }} </p>
        {{/if}}
        {{/each}}
      </ul>

    </div>
  </div>

    <div class="row text-center"></div>
    <!--Add Burger Form-->
    <h2>Add Burger</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="burg">Burger Name:</label>
        <input type="text" id="burg" name="name">
      </div>

      <button type="submit">Add Burger</button>
    </form>
  </div>
</div>